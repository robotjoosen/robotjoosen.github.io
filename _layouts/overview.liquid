---
layout: base
---

<main role="main" class="overview" aria-label="Main Content">
    <header class="overview__header">
        <h1 class="title">{{ page.title | capitalize }}</h1>
    </header>
    <article class="overview__items">
        <div class="row">
        {% for post in site.posts %}
            <section class="overview__item">
                <a href="{{post.url}}">
                    <picture class="image">
                        <picture>
                            <img src="{{ post.image }}" alt="{{ post.title }}">
                        </picture>
                    </picture>
                    <div class="content">
                        <div class="meta">
                            <time>{{ post.date | date: "%-d %B %Y" }}</time>
                            <small class="tag">{{ post.tag }}</small>
                        </div>
                        <h2 class="title">{{ post.title }}</h2>
                        <p class="description"></p>
                        <i class="fas fa-chevron-circle-left"></i>
                    </div>
                </a>
            </section>
        {% endfor %}
        </div>
    </article>
</main>
